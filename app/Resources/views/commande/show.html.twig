{% extends 'mi03VitrineBundle::layout.html.twig' %}

{% block content %}
    <h3>Commande nÂ°{{ commande.id }}</h3>

    <table>
        <tbody>

            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>

        </tbody>

    </table>
    <table>

        <h3>Contenu de la commande : </h3>
        <tbody>
        {% for item in commande.ligneCommande %}
            <tr>
                <td>{{ item.article.name }}</td>
                <td>{{ item.priceArticle }}</td>
                <td>{{ item.quantite }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btns-commande">
        <a href="{{ path('commande_index') }}" class="waves-effect waves-light btn-large">Retour aux commandes</a>
        {{ form_start(delete_form) }}
        <input class="waves-effect waves-light btn-large red darken-3 white-text btn-delete" type="submit" value="Delete" >
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
