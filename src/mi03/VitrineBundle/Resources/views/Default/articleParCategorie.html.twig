{# src/miXX/VitrineBundle/Resources/views/Demo/hello.html.twig #}
{% extends "mi03VitrineBundle::layout.html.twig" %}
{# override the body block from embedded.html.twig #}
{% block content %}
    <h1>{{ 'articles_categorie'|trans }}</h1>

    {% for item in articlesParCategorie  %}
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ item.name }}</span>
                        <span class="card-title">{{ item.price }}</span>
                    </div>
                    <div class="card-action">
                        {% if item.quantityInStock > 0 %}
                            <a href="{{ path('mi03_vitrine_ajouter_article',{'id': item.id}) }}">{{ 'ajouter_panier'|trans }}</a>
                        {% else %}
                            <a class="isDisabled" href="">{{ 'rupture_stock'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
